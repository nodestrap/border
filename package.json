{
  "name": "@nodestrap/border",
  "version": "3.0.0",
  "description": "A utility for styling the border and border radius of an HTML element.",
  "dependencies": {
    "@nodestrap/colors": "^3.0.1",
    "@nodestrap/sass-class-template": "^3.0.2"
  },
  "devDependencies": {
    "tilde-sass": "^1.0.1"
  },
  "scripts": {
    "test": "tilde-sass --file test/*.scss --outFile test/ --mergeSelectors",
    "test-watch": "tilde-sass --file test/*.scss --outFile test/ --mergeSelectors --watch",
    "compile": "tilde-sass --file src/*.scss --outFile dist/ --mergeSelectors --outputStyle compressed",
    "compile-watch": "tilde-sass --file src/*.scss --outFile dist/ --mergeSelectors --outputStyle compressed --watch"
  },
  "cssnano": {
    "preset": [
      "default",
      {
        "calc": false
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodestrap/border.git"
  },
  "keywords": [
    "border",
    "radius",
    "html",
    "element",
    "css",
    "style"
  ],
  "author": "nodestrap, heymarco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nodestrap/border/issues"
  },
  "homepage": "https://github.com/nodestrap/border#readme"
}
